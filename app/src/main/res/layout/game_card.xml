<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_game"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/Super_Mario_3D_World_capa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/nome_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Jogo"
        app:layout_constraintStart_toEndOf="@id/image_game"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/status_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Finalizado"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/nome_game"
        app:layout_constraintStart_toEndOf="@id/image_game"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/data_inicio_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio: 01/01/2025"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/status_game"
        app:layout_constraintStart_toEndOf="@id/image_game"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/data_fim_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fim: 02/02/2025"
        android:textSize="24sp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/data_inicio_game"
        app:layout_constraintStart_toEndOf="@id/image_game"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qtd. Horas: 20h"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/data_fim_game"
        app:layout_constraintStart_toEndOf="@id/image_game"
        android:layout_margin="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>